<div class="container">
    <h1>Will you be my Valentine? üíò</h1>

    <div class="buttons">
        <button id="yesBtn">TAK</button>
        <button id="noBtn">NIE</button>
    </div>
</div>

<script type="module">
import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
import {
  getFirestore,
  doc,
  getDoc,
  setDoc,
  updateDoc,
  increment,
  serverTimestamp
} from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

/* üîë TU WKLEJ SW√ìJ FIREBASE CONFIG */
const firebaseConfig = {
  apiKey: "API_KEY",
  authDomain: "PROJECT_ID.firebaseapp.com",
  projectId: "PROJECT_ID",
};

const app = initializeApp(firebaseConfig);
const db = getFirestore(app);

const yesBtn = document.getElementById("yesBtn");
const noBtn = document.getElementById("noBtn");

let scale = 1;

// ‚ù§Ô∏è serca
function createHeart(x, y) {
    const heart = document.createElement("div");
    heart.className = "heart";
    heart.textContent = "‚ù§Ô∏è";
    heart.style.left = x + "px";
    heart.style.top = y + "px";
    document.body.appendChild(heart);

    setTimeout(() => heart.remove(), 2000);
}

// üìä licznik NIE
const counterRef = doc(db, "stats", "clicks");

// init licznika (raz)
const initCounter = async () => {
  const snap = await getDoc(counterRef);
  if (!snap.exists()) {
    await setDoc(counterRef, { noClicks: 0 });
  }
};
initCounter();

// ‚ùå klik NIE
noBtn.addEventListener("click", async () => {
    scale += 0.15;
    yesBtn.style.transform = `scale(${scale})`;

    await updateDoc(counterRef, {
        noClicks: increment(1)
    });
});

// ‚úÖ klik TAK
yesBtn.addEventListener("click", async (e) => {
    for (let i = 0; i < 8; i++) {
        createHeart(
            e.clientX + Math.random() * 40 - 20,
            e.clientY + Math.random() * 40 - 20
        );
    }

    await setDoc(doc(db, "answers", crypto.randomUUID()), {
        answer: "TAK",
        time: serverTimestamp()
    });

    setTimeout(() => {
        alert("üíñ Wiedzia≈Çem, ≈ºe siƒô zgodzisz üòç");
    }, 300);
});
</script>

